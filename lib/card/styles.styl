.Card
  width 170px
  background #C2AC37
  border 5px solid black
  box-shadow: 0 0 10px rgba(black, 0.5);
  border-radius .5em
  padding: .5em

  &-description
    background white
    padding .5em
    font-size 12px
    border: 2px solid black

  &-name
    color: white
    text-transform: uppercase;
    margin: 0 0 .5em 0
    font-size: 1em

  &-attack
    background: black
    color: white
    font-size: .7em
    margin-top: .5em

  &-image
    width 100%
